<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:weightSum="1"
    android:onClick="termsCondition">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ACTIVE SESSION"
        android:id="@+id/textView49"
        android:textAlignment="center"
        android:textColor="#f4a507"
        android:gravity="fill_vertical"
        android:textSize="23sp"
        android:fontFamily="courier"
        android:background="@drawable/driver_noti_button_disable"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:clickable="false" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@drawable/myselecter"

        android:descendantFocusability="blocksDescendants"
        android:layout_weight="0.05"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/textView49"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Name :"
            android:id="@+id/textView32"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Contact :"
            android:id="@+id/textView38"
            android:layout_below="@+id/textView32"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/msgContact"
            android:text="9856038041"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/textView38"
            android:layout_toEndOf="@+id/textView38" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Destination:"
            android:id="@+id/textView47"
            android:layout_below="@+id/textView38"
            android:layout_alignLeft="@+id/textView38"
            android:layout_alignStart="@+id/textView38"
            android:layout_marginTop="3dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Status :"
            android:id="@+id/textView42"
            android:textColor="#fff"
            android:layout_above="@+id/textView47"
            android:layout_toLeftOf="@+id/msgStatus"
            android:layout_toStartOf="@+id/msgStatus"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pending"
            android:id="@+id/msgStatus"
            android:textColor="#e39d06"
            android:layout_above="@+id/textView47"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mr."
            android:id="@+id/msgSalute"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/msgStatus"
            android:layout_toEndOf="@+id/textView38" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="n/a"
            android:id="@+id/msgDesti"

            android:layout_below="@+id/textView38"
            android:layout_toEndOf="@+id/textView47"
            android:layout_marginStart="11dp"
            android:layout_marginTop="3dp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:id="@+id/textView52"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#1e3ffb"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="13sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="GO HOME"
        android:id="@+id/button2"
        android:background="@drawable/driver_noti_button_white"
        android:onClick="goHome"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/relativeLayout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOTE :"
        android:id="@+id/textView50"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#f2a203"
        android:textSize="20sp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you wish to cancel this session, you have to pay some penalty  to driver."
        android:id="@+id/textView51"
        android:textColor="#fff"
        android:textSize="13sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView50"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <Button
        android:text="Show Location"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button6"
        android:onClick="showDriverOnMapMethod"
        android:background="@drawable/driver_noti_button_white"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="CANCEL"
        android:id="@+id/button3"
        android:background="@drawable/driver_noti_button_red"
        android:onClick="msgReject"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>